@model HomeVM
<div class="card-body">
    
    <div class="table-responsive pt-3">
        <a  asp-controller="setting" asp-action="create" class="mb-2 btn btn-behance">Create</a>
        <table class="table table-dark">
            <thead>
                <tr>
                    <th>
                        Id
                    </th>
                    <th>
                        HeaderLogo
                    </th>
                    <th>
                        Brand
                    </th>
                    <th>
                        Icons
                    </th>
                    <th>
                        Settings
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Settings)
                {
                    <tr>
                        <td>
                            @item.Id
                        </td>
                        <td>
                            <img src="@item.HeaderLogo" />
                        </td>
                        <td>
                            <img src="@item.Brand" />
                        </td>

                       
                        
                            <td>
                                <ul>
                                    @foreach (var icon in item.Icons)
                                    {
                                        <li>@icon.IconUrl</li>
                                    }

                                </ul>
                            </td>
                    <td class="d-flex align-items-center">
                        @foreach (var setting in Model.Settings)
                        {
                            <div>
                                <a class="btn btn-primary" asp-controller="setting" asp-action="detail" asp-route-id="@setting.Id">detail</a>
                            </div>
                            <div>
                                <a class="btn btn-warning" asp-controller="setting" asp-action="edit" asp-route-id="@setting.Id">edit</a>
                            </div>
                            <div>
                                <a class="btn btn-danger" asp-controller="setting" asp-action="delete" asp-route-id="@setting.Id">delete</a>
                            </div>
                        }
                    </td>
                    </tr>
                }


            </tbody>
        </table>
    </div>
</div>