@model Slider
<form class="form-control" method="post" enctype="multipart/form-data">
    <div>
        <label for="">Title</label><br />
        <input class="form-control" asp-for="Title" /><br />
        <span class="text-danger" asp-validation-for="Title"></span>
    </div>
    <div>
        <label for="">Subtitle</label><br />
        <input class="form-control" asp-for="Subtitle" /><br />
        <span class="text-danger" asp-validation-for="Subtitle"></span>
    </div>
    <div>
        <label for="">Image</label><br />
        <input class="form-control" asp-for="Photo" accept="image/*" /><br />
        <span class="text-danger" asp-validation-for="Photo"></span>
    </div>
    <div>
        <button type="submit" class="btn btn-lg btn-outline-primary">Edit Slider</button>
    </div>
</form>